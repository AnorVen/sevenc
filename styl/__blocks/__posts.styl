.post{
  &__nav{
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 33%;
    background-color: #c33939
    color: #fff;
    a{
      text-decoration: none;
      color: #fff;

    }



    }


  &__desc{
    padding: 150px 50px;

  }

  &__title{
    text-align: center;
    font-size: 42px;
  }




  &__list{
    background: #259358
    margin-left: 33%;

  }
  &__item{
    width: 100%;
    height: 100vh;
    background-position: 0 50%;
    background-size: 67% 100%;
    }
}