.our-works{
  margin-left: 33%;
  &__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;

  }
  &__item{
    flex-grow: 1;
    flex-shrink 1;

    &--small{
      width: 50%;
    }
    &--big{
      flex-basis: 100%;
    }
  }
  &__figure{
    margin: 0;
    width: 100%;
    position: relative;
    }
  &__link{
    position: relative;
    display: block;
    width: 100%;
    height: 100%;

  }
  &__link:after{
    content: ' ';
    background-color: #000;
    height: 100%;
    opacity: 0.5;
    position: absolute;
    top: 0;
    left: 0;
    transition: opacity 0.3s;
    width: 100%;
  }

  /*&__link:hover:before{
    content: 'Хлеб';
    opacity: 1;
    background-color: #0300ff;
    height: 20%;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 10px;
    box-sizing: border-box;


  }*/
  &__link:hover:after{
    opacity: 0;

  }

  &__img{
    display: block;
    background-color: #000;
    background-repeat: no-repeat;
    background-size: cover;
    height: 315px;
    &--xleb{
      background-image: url(../img/hleb.png);
    }
    &--il{
      background-image: url(../img/il.jpg);
    }
    &--dog{
      background-image: url(../img/dogs.jpg)
    }
    &--fly{
      background-image: url(../img/fly.jpg)
    }
    &--TD{
      background-image: url(../img/candy.jpg)
    }

  }
  &__figuration{
    position: absolute;
    left: 0;
    height: 10%;
    background-color: #0084ff;
    bottom: 0;
    display: block;
    width: calc(100% - 40px);
    padding: 10px 20px;
  }






}