.prev {
  position: fixed;
  display: flex;
  justify-content: space-between;
  flex-direction column;
  flex-wrap: nowrap
  top: 0;
  left: 0;
  max-width: 640px;
  width: 33%;
  height: 100vh;

  &__list {
    max-width: 450px;
    margin: 0 auto;
    padding-top 150px;

  }
  
  &__item{
    display: none;
  }
  &__item--active{
    display: block;
  }
  
  &__title {
    font-size: 60px;
    font-weight: 700;
    text-align: center
  }
  &__text {
    font-weight: 300;
    text-align: center
    span {
      font-weight: inherit;
    }
  }
  &__contacts {
    ul{
      display flex;
      flex-wrap: nowrap;
      justify-content: space-between;
    }
    border-top: 2px solid #e9e9e9

    li {
      display: inline-block;

      border-right: 2px solid #e9e9e9;
      flex-grow: 1;


    }
    li:last-child{
      border-right: none;
    }
    a {
      font-weight: 300;
      font-size: 18px;
      text-decoration: none;
      display: block;
      padding: 10px;

    }

  }
}